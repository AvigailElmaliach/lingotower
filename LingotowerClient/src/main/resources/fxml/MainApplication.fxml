<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="mainLayout" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lingotower.ui.controllers.MainApplicationController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="navbar">
         <children>
            <Button fx:id="homeBtn" onAction="#handleHomeBtnClick" text="Home" />
            <Button fx:id="quizBtn" onAction="#handleQuizBtnClick" text="Quizzes" />
            <Button fx:id="dailyWordBtn" onAction="#handleDailyWordButtonClick" text="Daily Word" />
            <Button fx:id="translatorBtn" onAction="#handleTranslatorBtnClick" text="Translator" />
            <HBox HBox.hgrow="ALWAYS" />
            <Button fx:id="profileBtn" onAction="#handleProfileBtnClick" text="My Profile" />
            <Button fx:id="logoutBtn" onAction="#handleLogoutBtnClick" text="Logout" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>
